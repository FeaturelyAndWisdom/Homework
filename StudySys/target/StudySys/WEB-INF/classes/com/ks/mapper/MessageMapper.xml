<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ks.mapper.MessageMapper">

    <insert id="add" parameterType="message">
        insert into message(content,title) values(#{content},#{title})
    </insert>

    <update id="delete" parameterType="int">
        update message set isdel=1 where mid=#{mid}
    </update>

    <select id="findByMid" parameterType="int" resultType="message">
        select * from message where mid=#{mid}
    </select>

    <select id="findAll" resultType="message">
        select * from message order by createtime desc
    </select>

</mapper>